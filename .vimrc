syntax on

set tabstop=2
set shiftwidth=2
set expandtab


set nocompatible

"case insensitive search but only when no capitals
set ignorecase
set smartcase

"save dialog instead of failing to quit
set confirm

set visualbell

"line numbers
set number

"show last command in bottom right
set showcmd

"autocomplete menu
set wildmenu

"only redraw when necessary
set lazyredraw

"highlights the matching parentheses, bracket, or brace
set showmatch

"search as you type and highlight it
set incsearch
set hlsearch

"turn off highlighted search 
nnoremap <leader><space> :nohlsearch<CR>


